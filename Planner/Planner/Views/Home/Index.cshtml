@model IEnumerable<Planner.Models.Event>

<ul class="gigs">
    @foreach (var item in Model)
    {
        <li>

            <div class="date">
                <div class="month">
                    @item.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @item.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @item.Name
                </span>
                <span class="genre">
                    @item.Category.Name
                </span>
                <button class="btn btn-primary btn-sm">Going?</button>
            </div>
        </li>
    }
</ul>